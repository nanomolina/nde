#!/bin/bash

# Function to clear the terminal screen
clear_screen() {
  tput reset
}

# Function to display the string line by line
display_line_by_line() {
  # Split the string by newlines and loop through each line
  IFS=$'\n'
  for line in $1; do
    echo "$line"
    sleep 0.1  # Adjust the sleep time to control the display speed
  done
}

# Main function to run the script
run_script() {
  clear_screen
  display_line_by_line "$1"
}

